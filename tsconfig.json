{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "es5",
            "es2018",
            "dom"
        ],

        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,

        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
    },
    "include": [
        "./src/**/*.ts",
        "./json-schema/**/*.json",
    ],
    "exclude": [
        "node_modules",
        "./*.test.ts",
        "./**/*.test.ts",
    ]
}